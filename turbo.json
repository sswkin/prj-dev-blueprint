{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**",
        "!.next/cache/**",
        "node_modules/.cache/**"
      ],
      "env": ["NODE_ENV", "DATABASE_URL", "NEXTAUTH_SECRET", "SUPABASE_URL", "SUPABASE_ANON_KEY"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "preview": {
      "dependsOn": ["build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "format": {
      "cache": false
    }
  },
  "globalDependencies": [
    "**/.env.*local",
    "**/.env"
  ]
}